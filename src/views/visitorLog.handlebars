<section class="py-md-5 py-3">
  <div class="container">
    <h1 class="">Visitors Log Book</h1>
    <form id="visitor-form needs-validation">
      <input type="hidden" id="visitorId" name="id" />
      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorDate">Date:</label>
            <input
              type="date"
              class="form-control"
              id="visitorDate"
              name="date"
              required
            />
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorName">Name:</label>
            <input
              type="text"
              class="form-control"
              id="visitorName"
              name="name"
              placeholder="Enter Visitor's Name"
              required
            />
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorCompany">Company:</label>
            <input
              type="text"
              class="form-control"
              id="visitorCompany"
              name="company"
              placeholder="Enter Company Name"
            />
          </div>
        </div>
        <div class="col-md-12 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorReasonForVisit">Reason for
              Visit:</label>
            <textarea
              class="form-control"
              id="visitorReasonForVisit"
              name="reasonForVisit"
              placeholder="Enter Reason for Visit"
              required
            ></textarea>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorCardNumber">Visitor Card No.:</label>
            <input
              type="number"
              min="0"
              class="form-control"
              id="visitorCardNumber"
              name="visitorCardNumber"
              placeholder="Enter Visitor Card Number"
              required
            />
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorTimeIn">Time In:</label>
            <input
              type="time"
              class="form-control"
              id="visitorTimeIn"
              name="timeIn"
              required
            />
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-group">
            <label class="form-label" for="visitorTimeOut">Time Out:</label>
            <input
              type="time"
              class="form-control"
              id="visitorTimeOut"
              name="timeOut"
            />
          </div>
        </div>
        <div class="col-md-12 mb-4">
          <div class="form-group">
            <label class="form-label" for="visitorSignature">Signature:</label>
            <div class="signature-pad" id="signature-pad"></div>
            <input type="hidden" id="visitorSignature" name="signature" />
            <button
              type="button"
              class="btn btn-secondary mt-3"
              id="clear-signature"
            >Clear Signature</button>
          </div>
        </div>
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </form>

    <h2 class="mt-5">Visitors Logs Table</h2>
    <div id="visitor-logs">
      <input class="search form-control mb-3" placeholder="Search by name" />
      {{! <button id="delete-all" class="btn btn-danger mb-3">Delete All</button> }}
      <div class="table-responsive">
        <table
          class="table table-bordered table-striped hidden"
          id="visitor-logs-table"
        >
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Company</th>
              <th>Reason for Visit</th>
              <th>Visitor Card No.</th>
              <th>Time In</th>
              <th>Time Out</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="list">
            {{#each logs}}
              <tr>
                <td class="date">{{this.date}}</td>
                <td class="name">{{this.name}}</td>
                <td class="company">{{this.company}}</td>
                <td class="reasonForVisit">{{this.reasonForVisit}}</td>
                <td class="visitorCardNumber">{{this.visitorCardNumber}}</td>
                <td class="timeIn">{{this.timeIn}}</td>
                <td class="timeOut">{{this.timeOut}}</td>
                <td><button
                    class="btn btn-primary-serviqual select-btn"
                    data-id="{{this.id}}"
                    data-form-type="visitor"
                    data-signature="{{this.signature}}"
                  >Select</button></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div id="no-data-message"></div>
    </div>
  </div>
</section>